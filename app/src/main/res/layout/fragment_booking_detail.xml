<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.BookingDetailFragment">

    <!--    HEADER    -->
    <ImageView
        android:id="@+id/bookingDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:src="@drawable/header_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Details"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/main_dark"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/foot_icon"
        android:layout_marginTop="52dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bookingDetailHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    PET    -->
            <LinearLayout
                android:id="@+id/wrapPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="PET"
                    android:textStyle="bold"
                    android:textColor="@color/main_dark"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="#fff"
                    android:elevation="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="30dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: "
                            android:textSize="20sp"
                            android:textColor="@color/main_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:textSize="20sp"
                            android:textColor="@color/main_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type: "
                            android:textSize="20sp"
                            android:textColor="@color/main_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20127473"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/main_dark"/>
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Milo"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/main_dark"/>
                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Corgi"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/main_dark"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--    OWNER    -->
            <LinearLayout
                android:id="@+id/wrapOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="OWNER"
                    android:textStyle="bold"
                    android:textColor="@color/main_dark"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="#fff"
                    android:elevation="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="30dp">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textStyle="bold"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tvNameOwner"
                                android:layout_marginStart="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thái Chí Hiện"
                                android:textStyle="bold"
                                android:textColor="@color/main_dark"
                                android:textSize="20sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone number"
                                android:textStyle="bold"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tvPhoneOwner"
                                android:layout_marginStart="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0987999999"
                                android:textStyle="bold"
                                android:textColor="@color/main_dark"
                                android:textSize="20sp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textStyle="bold"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tvEmailOwner"
                                android:layout_marginStart="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="thaichickenhien@gmail.com"
                                android:textStyle="bold"
                                android:textColor="@color/main_dark"
                                android:textSize="20sp"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>

            <!--      BOOKING      -->
            <LinearLayout
                android:id="@+id/wrapBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="BOOKING"
                    android:textStyle="bold"
                    android:textColor="@color/main_dark"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="#fff"
                    android:elevation="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type:"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tvTypeBooking"
                        android:layout_marginStart="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel"
                        android:textStyle="bold"
                        android:textColor="@color/main_dark"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <!--      SERVICES      -->
            <LinearLayout
                android:id="@+id/wrapServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="SERVICES"
                    android:textStyle="bold"
                    android:textColor="@color/main_dark"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="#fff"
                    android:elevation="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>