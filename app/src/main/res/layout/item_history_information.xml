<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/background_light"
    android:id="@+id/pet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iconIV"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background">
    </ImageView>

    <TextView
        android:id="@+id/tvFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golden Dog"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/main_dark"
        app:layout_constraintTop_toTopOf="@+id/iconIV"
        app:layout_constraintStart_toEndOf="@+id/iconIV"
        tools:layout_editor_absoluteX="110dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:text="11.800.000Ä‘"
        android:textSize="20sp"
        android:textColor="#DE0A0A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iconIV"
        app:layout_constraintTop_toBottomOf="@+id/tvFullname"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iconIV"
        app:layout_constraintBottom_toBottomOf="@+id/iconIV">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Color:"
            android:textSize="18sp"
            android:textColor="@color/main_dark"/>

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Brown"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/main_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDateBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/02/2023"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/main_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/main_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginRight="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>